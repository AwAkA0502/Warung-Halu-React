// prisma/schema.prisma
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Order {
  id           Int      @id @default(autoincrement())
  customerName String
  whatsapp     String
  orderType    String @default("Dine In")   // "Dine In" atau "Take Away"
  tableNumber  Int?     // Bisa kosong (null) jika Take Away
  address      String?
  notes        String?
  items        Json
  total        Float
  status       String   @default("Pending")
  createdAt    DateTime @default(now())
}

model Feedback {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String
  message   String   @db.Text   
  createdAt DateTime @default(now())
}

model Menu {
  id        Int      @id @default(autoincrement())
  nama      String
  harga     Float
  kategori  String   // makanan-pedas, makanan-manis, minuman
  gambar    String   // nama file di folder public/images/
  level     Int      @default(0) // 0-3 sesuai logika server.cjs kamu
  deskripsi String?  @db.Text
  isReady   Boolean  @default(true)
}